  <script>

function Cat(name) {
      this.name = name;
      this.breed = name.breed;
      this.color = name.color;
      this.greeting = function() {
        console.log(`Hello, said ${this.name} the ${this.color} ${this.breed}.`);
      };
    }

  const bertie = new Cat('Bertie');
  bertie.name;
  bertie.breed = 'Cymric';
  bertie.color = 'white';
  bertie.greeting();

  const elfie = new Cat('Elfie');
  elfie.name;
  elfie.breed = 'Aphrodite Giant';
  elfie.color = 'ginger';
  elfie.greeting();

  </script>

